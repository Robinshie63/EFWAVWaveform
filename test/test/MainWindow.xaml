        <Button Content="c2" HorizontalAlignment="Left" Margin="150,-57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_1"/>
        <Button Content="c3" HorizontalAlignment="Left" Margin="230,-57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_2"/>
        <Button Content="load" HorizontalAlignment="Left" Margin="330,-57,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click_3"/>
        <TextBox HorizontalAlignment="Left" Height="23" Name="T1" Margin="53,-33,0,0" TextWrapping="Wrap" Text="1" VerticalAlignment="Top" Width="120"/>
        <Button Content="which" HorizontalAlignment="Left" Margin="178,-29,0,0" VerticalAlignment="Top" Width="39" Click="Button_Click_4"/>
        <Button Content="domain" HorizontalAlignment="Left" Margin="240,-29,0,0" VerticalAlignment="Top" Width="39" Click="Button_Click_5"/>
        <TextBox Name="t1" HorizontalAlignment="Left" Height="23" Margin="305,-29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="30"/>
        <TextBox Name="t2" HorizontalAlignment="Left" Height="23" Margin="340,-29,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="30"/>
        <TextBox Name="t3" HorizontalAlignment="Left" Height="23" Margin="375,-28,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="30"/>
        <TextBox Name="t4" HorizontalAlignment="Left" Height="23" Margin="416,-28,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="30"/>
        <Button Content="range" HorizontalAlignment="Left" Margin="456,-24,0,0" VerticalAlignment="Top" Width="38" Click="Button_Click_6"/>
    </Grid>

</Window>
